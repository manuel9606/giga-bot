<div id="tablaContainer" class="table-responsive">
  <table id="usersTable" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
<th>Usuario</th>
<th>DNI</th>
<th>Dirección</th>
<th>Teléfono</th>
<th>Servicio</th>
<th>Señal</th>
<th>Precio CATV</th>
<th>Estado Cable</th>
