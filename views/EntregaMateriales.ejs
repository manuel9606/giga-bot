  <body>

<form action="/entrega-materiales" method="post">
    <label for="nombreMaterial">Nombre del Material:</label><br>
    <select name="nombreMaterial" id="nombreMaterial">
      <% materiales.forEach(material => { %>
        <option value="<%= material.nombreMaterial %>"><%= material.nombreMaterial %></option>
      <% }); %>
    </select><br>
    <label for="cantidadEntregada">Cantidad Entregada:</label><br>
    <input type="number" id="cantidadEntregada" name="cantidadEntregada" required><br>

    <label for="unidades">Longitud:</label><br>
    <select name="unidades" id="unidades">
        <option value="">Seleccione...</option>
        <option value="unidad">Unidades</option>
        <option value="cm">cm</option>
        <option value="m">metros</option>
        <option value="km">Km</option>
        <option value="kg">Kg</option>
        <option value="otro">Otro</option>
    </select>


    <label for="fechaSalida">Fecha de Salida:</label><br>
    <input type="date" id="fechaSalida" name="fechaSalida" required><br>
   
    <label for="responsable">Responsable:</label><br>
        <select name="responsable" id="responsable" required>
            <option value="">Seleccione...</option>
            <option value="JOSE CORREA">JOSE CORREA</option>
            <option value="RICHARD RELUZ">RICHARD RELUZ</option>
            <option value="JHON">JHON</option>
            <option value="ROBERTO MISAYCO">ROBERTO MISAYCO</option>
            <option value="JESUS">JESUS</option>
            <option value="CARLOS MORALES">CARLOS MORALES</option>
            <option value="KEVIN RAMIREZ">KEVIN RAMIREZ</option>
            <option value="JACKSON CEDEÑO">JACKSON CEDEÑO</option>
            <option value="OTRO">OTRO</option>
        </select>

        <label for="destino">Destino:</label><br>
<select name="destino" id="destino" required>
    <option value="">Seleccione...</option>
    <option value="villa">Villa</option>
    <option value="sjm">SJM</option>
    <option value="nasca">Nasca</option>
    <option value="marcona">Marcona</option>
    <option value="huacho">Huacho</option>
    <option value="lima">Lima</option>
    <option value="otro">Otro</option>
</select>

    <label for="descripcion">Descripción:</label><br>
    <input type="text" id="descripcion" name="descripcion" ><br>


    <button type="submit" class="btn-submit">Registrar Entrega</button>
  </form>
  