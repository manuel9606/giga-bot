<div class="user-form">
 

  <h1>Actualizar Datos Internet</h1></h1>
  <form action="/servicios/actualizarVEL" method="post">
  <input type="hidden" name="user_id" value="<%= user.user_id %>">

    
    
  <label for="velocidad">Velocidad:</label>
  <select name="velocidad" id="velocidad" onchange="actualizarPrecio()" required>
    <option value="">Seleccione...</option>
    <% velocidades.forEach(vel => { %>
      <option 
        value="<%= vel.velocidad %>" 
        data-precio="<%= vel.precio %>" 
        <%= user.velocidad === vel.velocidad ? 'selected' : '' %>>
        <%= vel.velocidad %>
      </option>
    <% }) %>
  </select>
  

            <p></p>
            <label for="precio2">Mensualidad:</label>
            <input type="number" name="precio2" id="precio2" readonly value="<%= user.precio2 %>">
    
            <p></p>
            <label for="tipo_onu">Tipo de ONU:</label>
            <select name="tipo_onu" id="tipo_onu">
                <option value="">Seleccione...</option>
                <option value="tplink" <%= user.tipo_onu === 'tplink' ? 'selected' : '' %>>TP-Link</option>
                <option value="huawei" <%= user.tipo_onu === 'huawei' ? 'selected' : '' %>>Huawei</option>
                <option value="fiberhome" <%= user.tipo_onu === 'fiberhome' ? 'selected' : '' %>>Fiberhome</option>
                <option value="xpon" <%= user.tipo_onu === 'xpon' ? 'selected' : '' %>>XPON</option>
                <option value="otro" <%= user.tipo_onu === 'otro' ? 'selected' : '' %>>Otro</option>
