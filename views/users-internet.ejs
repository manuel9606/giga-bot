<body>
  <header>

  </header>
  
  <nav>
    <ul>
      <li><a href="/menu">MENÚ</a></li>
      
      <!-- Agrega más elementos de lista según tus rutas -->
    </ul>
  </nav>
</body>
<div class="user-form">
 

  <h1>Actualizar Datos Internet</h1></h1>
  <form action="/servicios/actualizarInt" method="post">
  <input type="hidden" name="user_id" value="<%= user.user_id %>">

    
        
            
            <label for="estado_internet">Agregar Internet:</label>
            <select name="estado_internet" id="estado_internet">
                <option value="">Seleccione...</option>
                <option value="Act" <%= user.estado_internet === 'Act' ? 'selected' : '' %>>Activar</option>
            </select>
    
            <p> </p><label for="tipo_servicio2">Tipo de servicio:</label>
            <select name="tipo_servicio2" id="tipo_servicio2">
                <option value="">Seleccione...</option>
                <option value="Internet" <%= user.tipo_servicio2 === 'Internet' ? 'selected' : '' %>>Internet</option>
            </select>
    
            <p> </p><label for="instalacion_int">Fecha Inscripción:</label>
            <input type="date" name="instalacion_int" id="instalacion_int" value="<%= user.instalacion_int %>">
    
    <label for="velocidad">Velocidad:</label>
<select name="velocidad" id="velocidad" onchange="actualizarPrecio()" required>
  <option value="">Seleccione...</option>
  <% velocidades.forEach(vel => { %>
    <option value="<%= vel.velocidad %>" data-precio="<%= vel.precio %>"><%= vel.velocidad %></option>
  <% }) %>
</select>


<p></p>
            <label for="precio2">Mensualidad:</label>
            <input type="number" name="precio2" id="precio2" readonly value="<%= user.precio2 %>">



            <p></p>
      <label for="inscripcion_internet">Inscripción Internet:</label>
        <input type="number" name="inscripcion_internet" id="inscripcion_internet" step="0.01" value="0.00">

        <label for="costo_materiales_internet">Costo Materiales Internet:</label>
        <input type="number" name="costo_materiales_internet" id="costo_materiales_internet" step="0.01" value="0.00">
          
         
          
           <p></p>
            
            
            
            
            
            <label for="tipo_onu">Tipo de ONU:</label>
            <select name="tipo_onu" id="tipo_onu">
                <option value="">Seleccione...</option>
                <option value="tplink" <%= user.tipo_onu === 'tplink' ? 'selected' : '' %>>TP-Link</option>
                <option value="huawei" <%= user.tipo_onu === 'huawei' ? 'selected' : '' %>>Huawei</option>
                <option value="fiberhome" <%= user.tipo_onu === 'fiberhome' ? 'selected' : '' %>>Fiberhome</option>
                <option value="xpon" <%= user.tipo_onu === 'xpon' ? 'selected' : '' %>>XPON</option>
                <option value="otro" <%= user.tipo_onu === 'otro' ? 'selected' : '' %>>Otro</option>
            </select>
    
            <p></p>
            <label for="MAC">MAC:</label>
            <input type="text" id="MAC" name="MAC" value="<%= user.MAC %>">
    
            <label for="usuario">Usuario Wi-Fi:</label>
            <input type="text" id="usuario" name="usuario" value="<%= user.usuario %>">
    
            <label for="contrasena">Contraseña Wi-Fi:</label>
            <input type="text" id="contrasena" name="contrasena" value="<%= user.contrasena %>">
    
            <label for="ppp_name">PPP Name:</label>
            <input type="text" id="ppp_name" name="ppp_name" value="<%= user.ppp_name %>">
    
            <label for="ppp_password">PPP Password:</label>
            <input type="text" id="ppp_password" name="ppp_password" value="<%= user.ppp_password %>">
    
            <label for="nro_tarjeta">Número de Tarjeta:</label>
            <select id="nro_tarjeta" name="nro_tarjeta">
                <option value="">Seleccione...</option>
                <option value="11" <%= user.nro_tarjeta === '11' ? 'selected' : '' %>>11</option>
                <option value="12" <%= user.nro_tarjeta === '12' ? 'selected' : '' %>>12</option>
                <option value="13" <%= user.nro_tarjeta === '13' ? 'selected' : '' %>>13</option>
                <option value="14" <%= user.nro_tarjeta === '14' ? 'selected' : '' %>>14</option>
                <option value="15" <%= user.nro_tarjeta === '15' ? 'selected' : '' %>>15</option>
                <option value="16" <%= user.nro_tarjeta === '16' ? 'selected' : '' %>>16</option>
            </select>
    
            <p></p>
            <label for="nro_puerto">Número de Puerto:</label>
            <select id="nro_puerto" name="nro_puerto">
                <option value="">Seleccione...</option>
                <option value="1" <%= user.nro_puerto === '1' ? 'selected' : '' %>>1</option>
                <option value="2" <%= user.nro_puerto === '2' ? 'selected' : '' %>>2</option>
                <option value="3" <%= user.nro_puerto === '3' ? 'selected' : '' %>>3</option>
                <option value="4" <%= user.nro_puerto === '4' ? 'selected' : '' %>>4</option>
                <option value="5" <%= user.nro_puerto === '5' ? 'selected' : '' %>>5</option>
                <option value="6" <%= user.nro_puerto === '6' ? 'selected' : '' %>>6</option>
                <option value="7" <%= user.nro_puerto === '7' ? 'selected' : '' %>>7</option>
                <option value="8" <%= user.nro_puerto === '8' ? 'selected' : '' %>>8</option>
                <option value="9" <%= user.nro_puerto === '9' ? 'selected' : '' %>>9</option>
                <option value="10" <%= user.nro_puerto === '10' ? 'selected' : '' %>>10</option>
                <option value="11" <%= user.nro_puerto === '11' ? 'selected' : '' %>>11</option>
                <option value="12" <%= user.nro_puerto === '12' ? 'selected' : '' %>>12</option>
                <option value="13" <%= user.nro_puerto === '13' ? 'selected' : '' %>>13</option>
                <option value="14" <%= user.nro_puerto === '14' ? 'selected' : '' %>>14</option>
                <option value="15" <%= user.nro_puerto === '15' ? 'selected' : '' %>>15</option>
                <option value="16" <%= user.nro_puerto === '16' ? 'selected' : '' %>>16</option>
            </select>
    
            <p></p>
            <label for="descripcion_int">Descripción:</label>
            <textarea name="descripcion_int" id="descripcion_int" rows="4" cols="50"><%= user.descripcion_int %></textarea>
    
            
            <button type="submit" class="btn-submit">Actualizar Datos</button>
        </div>
    </form>

    <div id="error-message" style="color: red;"></div>
  </div>
  
  

  


  

  <script src="actualizar-internet.js"></script>