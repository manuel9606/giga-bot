                <option value="15" <%= user.nro_tarjeta === '15' ? 'selected' : '' %>>15</option>
                <option value="16" <%= user.nro_tarjeta === '16' ? 'selected' : '' %>>16</option>
            </select>
    
            <p></p>
            <label for="nro_puerto">Número de Puerto:</label>
            <select id="nro_puerto" name="nro_puerto">
                <option value="">Seleccione...</option>
