      <!-- Agrega más elementos de lista según tus rutas -->
    </ul>
  </nav>



<body>

<h1>Materiales por Responsable</h1>
<div id="filtroResponsable">
    <form action="/materiales-responsable" method="get">
        <label for="responsable">Seleccione un responsable:</label>
        <select id="responsable" name="responsable">
            <% responsables.forEach(responsable => { %>
                <option value="<%= responsable %>" <%= selectedResponsable === responsable ? 'selected' : '' %>><%= responsable %></option>
            <% }); %>
        </select>
        <button type="submit">Buscar</button>
    </form>
</div>

<div id="tablaContainer">
    <table id="MaterialesPorResponsable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Material</th>
                <th>Cantidad</th>
                <th>Destino</th>
            </tr>
        </thead>
        <% if (materialesPorResponsable && materialesPorResponsable.length > 0) { %>
            <% materialesPorResponsable.forEach(material => { %>
                <tr>
                    <td><%= material.fechaSalida %></td>
                    <td><%= material.nombreMaterial %></td>
                    <td><%= material.cantidad %></td>
                    <td><%= material.destino %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="4">No se encontraron datos para el responsable seleccionado.</td>
            </tr>
        <% } %>
    </table>
</div>
</body>
</html>
